    <h1 style="font-size: 4em; color: #fff; text-shadow: 4px 4px 0 #000, -4px -4px 0 #000, 4px -4px 0 #000, -4px 4px 0 #000, 0 4px 0 #000, 4px 0 0 #000, 0 -4px 0 #000, -4px 0 0 #000; animation: shake 0.5s infinite; margin: 0;">
