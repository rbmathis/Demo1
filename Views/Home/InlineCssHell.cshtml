@if (ViewBag.SecretMessage != null)
{
    <div style="@ViewBag.BackgroundEffect padding: 30px; text-align: center; font-size: 2em; color: white; text-shadow: 2px 2px 4px black; animation: rainbow 1s infinite;">
        @ViewBag.SecretMessage
    </div>
}

<div style="margin-top: 30px;">
    <h2 style="font-family: 'Chiller', fantasy; font-size: 3em; color: #8B0000; text-align: center; text-shadow: 3px 3px 0 #FFD700; letter-spacing: 5px;">
        âœ¨ Items With Random Inline Styles âœ¨
    </h2>
    
    <div style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center; padding: 20px;">
        @if (model?.items != null)
        {
            foreach (var item in model.items)
            {
                <div style="@item.style cursor: pointer; transition: all 0.3s;" onclick="@item.onclick">
                    @item.text
                    @if (item.isImportant)
                    {
                        <span style="font-size: 0.6em; color: red; display: block;">(!important on everything)</span>
                    }
                </div>
            }
        }
    </div>
</div>

<div style="margin-top: 30px; padding: 30px; background: #000; border: 10px double lime;">
